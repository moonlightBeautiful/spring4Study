<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd


    	http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="../jdbc.properties"/>

    <bean id="dataSource"
          class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <!--jdbcTemplate作为dao的属性使用 -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

    <bean id="studentDao" class="com.java1234.c04jdbc.dao.impl.StudentDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>

    <bean id="studentService" class="com.java1234.c04jdbc.service.impl.StudentServiceImpl">
        <property name="studentDao" ref="studentDao"></property>
    </bean>

    <!--jdbcSupport作为dao的父类 -->
    <bean id="teacherDao" class="com.java1234.c04jdbc.dao.impl.TeacherDaoImpl">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

    <bean id="teacherService" class="com.java1234.c04jdbc.service.impl.TeacherServiceImpl">
        <property name="teacherDao" ref="teacherDao"></property>
    </bean>

    <!--NamedParameterJdbcTemplate作为dao的属性使用 -->
    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"></constructor-arg>
    </bean>
    <bean id="presidentDao" class="com.java1234.c04jdbc.dao.impl.PresidentDaoImpl">
        <property name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"></property>
    </bean>

    <bean id="presidentService" class="com.java1234.c04jdbc.service.impl.PresidentServiceImpl">
        <property name="presidentDao" ref="presidentDao"></property>
    </bean>
</beans>