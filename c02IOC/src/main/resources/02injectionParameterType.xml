<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 注入参数类型6种：基本数据类型、bean类型、null类型注入、级联注入、集合、Map、proprty类型注入 -->
    <!-- 1.基本数据类型 - 不在举例-->

    <!-- 2.bean类型 - 1、外部注入-->
    <bean id="dog21" class="com.java1234.entity.Dog">
        <property name="name" value="狗21"></property>
    </bean>
    <bean id="hunter21" class="com.java1234.entity.Hunter">
        <property name="id" value="21"></property>
        <property name="name" value="猎人21"></property>
        <property name="age" value="12"></property>
        <property name="dog" ref="dog21"></property>
    </bean>
    <!-- 2.bean类型 - 2、内部注入-->
    <bean id="hunter22" class="com.java1234.entity.Hunter">
        <property name="id" value="22"></property>
        <property name="name" value="猎人22"></property>
        <property name="age" value="12"></property>
        <property name="dog">
            <bean class="com.java1234.entity.Dog">
                <property name="name" value="狗22"></property>
            </bean>
        </property>
    </bean>

    <!-- 3.null类型 -->
    <bean id="hunter3" class="com.java1234.entity.Hunter">
        <property name="id" value="3"></property>
        <property name="name">
            <null></null>
        </property>
        <property name="age" value="13">
        </property>
        <property name="dog">
            <null></null>
        </property>
    </bean>

    <!-- 4.级联类型 -->
    <bean id="hunter4" class="com.java1234.entity.Hunter">
        <property name="id" value="4"></property>
        <property name="name" value="猎人4"></property>
        <property name="age" value="14"></property>
        <property name="dog.name" value="dog4"></property>
    </bean>

    <!-- 5.集合（list、set）类型、映射（map）类型、property类型-->
    <bean id="hunter5" class="com.java1234.entity.Hunter">
        <property name="hobbies">
            <list>
                <value>唱歌</value>
                <value>跳舞</value>
            </list>
        </property>
        <property name="loves">
            <set>
                <value>唱歌2</value>
                <value>跳舞2</value>
            </set>
        </property>
        <property name="works">
            <map>
                <entry>
                    <key>
                        <value>上午</value>
                    </key>
                    <value>写代码</value>
                </entry>
                <entry>
                    <key>
                        <value>下午</value>
                    </key>
                    <value>测试代码</value>
                </entry>
            </map>
        </property>
        <property name="addresses">
            <props>
                <prop key="address1">地址1</prop>
                <prop key="address2">地址2</prop>
            </props>
        </property>
    </bean>
</beans>